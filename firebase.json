{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "web-output",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/__/**"
    ],
    "predeploy": [
      "sh build --mode=production",
      "cp -r web-dev/static web-output/static"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
